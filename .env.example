# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_db
DB_USERNAME=app_user
DB_PASSWORD=app_pass

# JPA/Hibernate Configuration
# Options: validate, update, create, create-drop, none
# Production: use 'validate' with Flyway enabled
# Development: use 'update' with Flyway disabled for quick iteration
DDL_AUTO=validate
SHOW_SQL=false
FORMAT_SQL=false

# Flyway Configuration
# Enable Flyway for production deployment
FLYWAY_ENABLED=true
# baseline-on-migrate: true allows Flyway to work with existing databases
FLYWAY_BASELINE_ON_MIGRATE=true

# Elasticsearch Configuration
ELASTIC_PASSWORD=elastic123!@#
ELASTICSEARCH_URIS=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elastic123!@#

# SeaweedFS Configuration
